<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieDiary.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MovieDiary.Views"
    Title="MovieDiary">

    <TabBar>
        <Tab Title="Hledat" Icon="search_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:SearchPage}" />
        </Tab>
        <Tab Title="Můj Deník" Icon="book_icon.png">
            <ShellContent ContentTemplate="{DataTemplate views:LibraryPage}" />
        </Tab>
    </TabBar>

</Shell>