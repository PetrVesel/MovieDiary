<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieDiary.Views.LibraryPage"
             Title="Můj Deník">

    <CollectionView x:Name="myList" SelectionMode="Single" SelectionChanged="OnMovieSelected">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="Auto, *, Auto" Padding="10">
                    <Image Source="{Binding PosterUrl}" HeightRequest="80" WidthRequest="60" Aspect="AspectFill"/>
                    <VerticalStackLayout Grid.Column="1" Padding="10,0">
                        <Label Text="{Binding Title}" FontAttributes="Bold" />
                        <Label Text="{Binding MyNote}" LineBreakMode="TailTruncation" TextColor="Gray" />
                    </VerticalStackLayout>
                    <Label Grid.Column="2" Text="{Binding MyRating, StringFormat='{0}★'}" FontSize="20" VerticalOptions="Center" TextColor="#FFD700"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>