<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieDiary.Views.SearchPage"
             Title="Hledat Filmy">

    <Grid RowDefinitions="Auto, *" Padding="10">
        <SearchBar x:Name="searchBar" 
                   Placeholder="Zadejte název (např. Matrix)"
                   SearchButtonPressed="OnSearchPressed" />

        <CollectionView Grid.Row="1" x:Name="moviesList" SelectionMode="Single" SelectionChanged="OnMovieSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="Auto, *" Padding="5">
                        <Image Source="{Binding PosterUrl}" HeightRequest="100" WidthRequest="70" Aspect="AspectFill"/>
                        <VerticalStackLayout Grid.Column="1" Padding="10">
                            <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="{Binding Year}" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>